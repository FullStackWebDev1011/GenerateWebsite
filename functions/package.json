{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "dev": "cross-env NODE_ENV=development firebase emulators:start",
    "shell": "NODE_ENV=development firebase functions:shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "css": "tailwindcss -i ./src/tailwind.css -o ./src/views/app.css --minify",
    "css:watch": "tailwindcss -i ./src/tailwind.css -o ./src/views/app.css --watch"
  },
  "engines": {
    "node": "14"
  },
  "main": "index.js",
  "dependencies": {
    "cross-env": "^7.0.3",
    "eta": "^1.12.3",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "node-fetch": "^2.6.1",
    "sitemap": "^7.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "firebase-functions-test": "^0.2.0",
    "postcss": "^8.3.6",
    "tailwindcss": "^2.2.7"
  },
  "private": true
}
